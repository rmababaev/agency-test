<section class="bg-light" id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">{{ __('Our Amazing Team', 'team_domain') }}</h2>
                <h3 class="section-subheading text-muted">{{ __('Lorem ipsum dolor sit amet consectetur.', 'team_domain') }}</h3>
            </div>
        </div>
        <div class="row">
            {% for user in users %}
            <div class="col-sm-4">
                <div class="team-member">
                    <img class="mx-auto rounded-circle" src="img/team/1.jpg" alt="">
                    <h4>{{ user.user_login }}</h4>
                    <p class="text-muted">{{ fn.get_user_meta(user.ID, 'post', true) }}</p>
                    <ul class="list-inline social-buttons">
                        <li class="list-inline-item">
                            <a href="{{ fn.get_user_meta(user.ID, 'twitter', true) }}">
                                <i class="fa fa-twitter"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ fn.get_user_meta(user.ID, 'facebook', true) }}">
                                <i class="fa fa-facebook"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ fn.get_user_meta(user.ID, 'linkedin', true) }}">
                                <i class="fa fa-linkedin"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p>
            </div>
        </div>
    </div>
</section>